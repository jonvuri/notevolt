$searchheight = 1.4em
$line = 1.15em
$titleheight = 1
$previewheight = 3

// Keep OS X from bouncing our whole UI around
html, body
    overflow: hidden

#full
    width: 100%
    height: 100%

#searchbar
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: $searchheight

#searchbox
    width: 100%
    height: 100%
    padding: 0
    outline: none

#notelistcol
    position: absolute
    top: $searchheight
    bottom: 0
    left: 0
    overflow: auto
    width: 30%

#noteviewcol
    position: absolute
    top: $searchheight
    bottom: 0
    right: 0
    overflow: auto
    width: 70%

#note
    width: 100%
    height: $line * ($titleheight + $previewheight)

#note-title
    width: 100%
    height: $line * $titleheight
    white-space: nowrap
    text-overflow: ellipsis
    overflow: hidden

#note-preview
    width: 100%
    height: $line * $previewheight
    text-overflow: ellipsis
    overflow: hidden
